     <HEAD>
      <TDOBJECT>DOKU</TDOBJECT>
      <TDNAME>ZAPP_D_LB_AFTER_COMMA_RULE</TDNAME>
      <TDID>DE</TDID>
      <TDSPRAS>E</TDSPRAS>
      <TDFORM>S_DOCU_SHOW</TDFORM>
      <TDSTYLE>S_DOCUS1</TDSTYLE>
      <TDVERSION>00002</TDVERSION>
      <TDLINESIZE>072</TDLINESIZE>
     </HEAD>
     <LINES>
      <TLINE>
       <TDFORMAT>U1</TDFORMAT>
       <TDLINE>&amp;DEFINITION&amp;</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>AS</TDFORMAT>
       <TDLINE>Line Break after Comma Rule</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>U1</TDFORMAT>
       <TDLINE>&amp;USE&amp;</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>*</TDFORMAT>
       <TDLINE>The following options are possible:</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M1</TDFORMAT>
       <TDLINE>0 =&gt; add a line break after a comma</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M1</TDFORMAT>
       <TDLINE>1 =&gt; add no line break after a comma</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M1</TDFORMAT>
       <TDLINE>2 =&gt; add no line break after a comma at simple functions if the</TDLINE>
      </TLINE>
      <TLINE>
       <TDLINE>following criterions are fulfilled:</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M2</TDFORMAT>
       <TDLINE>the closing bracket is originally in the same row as the function name</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M2</TDFORMAT>
       <TDLINE>a possible sub function contains no comma and no select statement</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M2</TDFORMAT>
       <TDLINE>it is one of the following functions:</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M3</TDFORMAT>
       <TDLINE>SUBSTRING</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M3</TDFORMAT>
       <TDLINE>SUBSTR_AFTER</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M3</TDFORMAT>
       <TDLINE>SUBSTR_BEFORE</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M3</TDFORMAT>
       <TDLINE>RPAD</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M3</TDFORMAT>
       <TDLINE>LPAD</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M3</TDFORMAT>
       <TDLINE>CONCAT</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M3</TDFORMAT>
       <TDLINE>NULLIF</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M3</TDFORMAT>
       <TDLINE>IFNULL</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>U1</TDFORMAT>
       <TDLINE>&amp;DEPENDENCIES&amp;</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>AS</TDFORMAT>
      </TLINE>
      <TLINE>
       <TDFORMAT>U1</TDFORMAT>
       <TDLINE>&amp;EXAMPLE&amp;</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M1</TDFORMAT>
       <TDLINE>Examples for option 2:</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M2</TDFORMAT>
       <TDLINE>substring(rtrim(table.field),3,4) =&gt; no line break</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M2</TDFORMAT>
       <TDLINE>substring(rtrim(table.field),3,4</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>/</TDFORMAT>
       <TDLINE>) =&gt; line break, because the closing bracket is in a new line</TDLINE>
      </TLINE>
      <TLINE>
       <TDFORMAT>M2</TDFORMAT>
       <TDLINE>substring(concat(&quot;Bla&quot;,&quot;Blub&quot;),2,3) =&gt; line break, because the sub</TDLINE>
      </TLINE>
      <TLINE>
       <TDLINE>function concat contains a comma</TDLINE>
      </TLINE>
     </LINES>
    </item>
